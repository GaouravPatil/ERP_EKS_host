# College ERP System Environment Configuration
# Copy this file to .env and update the values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Institution Configuration
INSTITUTION_NAME=Your College Name
INSTITUTION_SHORT_NAME=YCN
INSTITUTION_ADDRESS=Your College Address
INSTITUTION_PHONE=+1234567890
INSTITUTION_EMAIL=info@yourcollege.edu
INSTITUTION_WEBSITE=https://yourcollege.edu

# Academic Configuration
DEFAULT_ACADEMIC_YEAR=2024-2025
MINIMUM_ATTENDANCE_PERCENTAGE=75
EXCELLENT_ATTENDANCE_PERCENTAGE=85
PASSING_GRADE_PERCENTAGE=60
DISTINCTION_GRADE_PERCENTAGE=85

# Application Configuration
PAGINATION_PER_PAGE=10
MAX_UPLOAD_SIZE=5242880
SESSION_TIMEOUT=3600
MAX_IMAGE_SIZE=2097152
MIN_PASSWORD_LENGTH=8

# Time Configuration
CLASS_DURATION_MINUTES=60
SHORT_BREAK_MINUTES=15
LUNCH_BREAK_MINUTES=60

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Database Configuration
# For PostgreSQL
# DATABASE_URL=postgres://username:password@localhost:5432/college_erp

# For MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/college_erp

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Upload Settings
MEDIA_ROOT=media/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles/
STATIC_URL=/static/

